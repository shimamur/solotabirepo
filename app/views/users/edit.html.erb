<% provide(:title, "編集") %>
<div>
  <div class="editform">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <h1>プロフィールを編集</h1>
      
      <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank">プロフィール画像を変更する</a>
      </div>
      
      <div>
      <%= f.label :name%><br>
      <%= f.text_field :name, class: 'formbox' %>
      </div>
      
      <div>
      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'formbox' %>
      </div>
      
      <div>
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'formbox' %>
      </div>
      
      <div>
      <%= f.label :password_confirmation, "パスワード再確認" %><br>
      <%= f.password_field :password_confirmation, class: 'formbox' %>
      </div>
      
      <div>
      <%= f.submit "変更を保存する", class: "btn" %>
      </div>

    <% end %>
  </div>
</div>