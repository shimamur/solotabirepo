<% provide(:title, "ログイン") %>
<div class="loginwrapper">
      <h1>ログイン</h1>
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <div class="formbox">
          <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>
        </div>

        <div class="formbox">
          <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
        </div>

        <div>
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, 'ログインしたままにする', class: 'form-check-label' %>
        </div>

        <div >
          <%= f.submit "ログイン", class: "loginbtn" %>
        </div>
      <% end %>

      <p>新しくはじめる方は<%= link_to "こちら", signup_path %></p>
</div>
